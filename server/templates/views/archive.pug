extends ../layouts/default
include ../mixins/aside
include ../mixins/single-post-thumb
include ../mixins/tree

block css
	link(href="https://cdn.bootcss.com/bootstrap-treeview/1.2.0/bootstrap-treeview.min.css", rel="stylesheet")
block content
	.container: .row
		div.col-sm-12.col-md-12.col-lg-8
			if !!data.archiveResults.length
				div.posts-group.search-group
					each item in data.archiveResults
						+post(item)
			else
				.alert.alert-danger(role="alert")="该存档下暂无内容"
		+aside(data)
			


block js
	+tree(data)